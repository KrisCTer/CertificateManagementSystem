@model IEnumerable<CertificateRequestz>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<tbody>
    @foreach (var request in Model)
    {
        <tr>
            <td>@request.RequestId</td>
            <td>@request.Citizen.FullName (@request.CitizenId)</td>
            <td>@request.CertificateType.CertificateTypeName</td>
            <td>@request.SubmissionDate.ToString("dd/MM/yyyy")</td>
            <td>
                @if (request.Status == "Đang xử lý")
                {
                    <span class="badge bg-warning text-dark">Đang xử lý</span>
                }
                else if (request.Status == "Hoàn thành")
                {
                    <span class="badge bg-success">Hoàn thành</span>
                }
                else if (request.Status == "Từ chối")
                {
                    <span class="badge bg-danger">Từ chối</span>
                }
                else
                {
                    <span class="badge bg-info">@request.Status</span>
                }
            </td>
            <td>
                <button class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></button>
                @if (request.Status == "Đang xử lý")
                {
                    <button class="btn btn-sm btn-success"><i class="fas fa-check"></i></button>
                }
            </td>
        </tr>
    }
</tbody>
