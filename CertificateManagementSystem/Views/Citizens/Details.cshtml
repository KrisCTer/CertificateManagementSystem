@model CitizenshipCertificateandDiplomaManagementSystem.Models.Citizen

@{
    ViewData["Title"] = "Citizen Details";
}

<div class="container-fluid">
    <!-- Header section remains the same -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Citizen Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.CitizenId" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm mr-2">
                <i class="fas fa-edit fa-sm text-white-50"></i> Edit
            </a>
            <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Citizen Information</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Personal Information Column -->
                <div class="col-md-6">
                    <div class="info-section mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-user-circle mr-2"></i>Personal Information</h5>
                        <div class="info-item">
                            <span class="info-label">Full Name:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.FullName)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Date of Birth:</span>
                            <span class="info-value">@(Model.DateOfBirth.ToString("dd/MM/yyyy") ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Gender:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.Gender)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Place of Birth:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.PlaceOfBirth)</span>
                        </div>
                    </div>
                </div>

                <!-- Contact Information Column -->
                <div class="col-md-6">
                    <div class="info-section mb-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-id-card mr-2"></i>Identification & Contact</h5>
                        <div class="info-item">
                            <span class="info-label">ID Number:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.IdNumber)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Current Address:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.CurrentAddress)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.Email)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Phone Number:</span>
                            <span class="info-value">@Html.DisplayFor(model => model.PhoneNumber)</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Information -->
            <div class="info-section mt-4">
                <h5 class="text-primary mb-3"><i class="fas fa-database mr-2"></i>System Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="info-label">Created Date:</span>
                            <span class="info-value">@(Model.CreatedDate.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="info-label">Updated Date:</span>
                            <span class="info-value">@(Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.CitizenId" class="btn btn-primary mr-2">
            <i class="fas fa-edit mr-2"></i>Edit Citizen
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list mr-2"></i>Back to List
        </a>
    </div>
</div>
